{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
      {
        "type": "npm",
        "script": "dev",
        "group": {
          "kind": "build",
          "isDefault": true
        }
      },
      {
        "type": "npm",
        "script": "test",
        "group": {
          "kind": "test",
          "isDefault": true
        }
      },
      {
        "type": "npm",
        "script": "docs",
        "problemMatcher": []
      },
      {
        "type": "npm",
        "script": "apidoc",
        "problemMatcher": []
      },
      {
        "type": "npm",
        "script": "jsdoc",
        "problemMatcher": []
      },
      {
        "type": "npm",
        "script": "lint",
        "problemMatcher": [
          "$eslint-stylish"
        ]
      },
      {
        "type": "npm",
        "script": "start",
        "problemMatcher": []
      },
      {
        "type": "npm",
        "script": "stop",
        "problemMatcher": []
      }
    ]
  }
