{
  "name": "stockpile-api",
  "version": "2.0.0",
  "description": "The API for Stockpile, an app that manages stuff for organizations.",
  "main": "index.js",
  "repository": "https://github.com/AdamVig/stockpile-api.git",
  "author": "Adam Vigneaux <adamvigneaux@gmail.com>",
  "license": "UNLICENSED",
  "scripts": {
    "start": "pm2 start index.js --name stockpile --env production",
    "stop": "pm2 stop stockpile || true",
    "dev": "NODE_ENV=development nodemon --inspect index.js",
    "test": "PORT=7863 nyc ava",
    "lint": "eslint . --ignore-path .gitignore",
    "docs": "npm run apidoc && npm run jsdoc",
    "apidoc": "apidoc --input controllers/ --input services/ --output docs/apidoc",
    "jsdoc": "jsdoc --configure .jsdoc.json"
  },
  "dependencies": {
    "bcrypt": "^1.0.2",
    "bunyan": "^1.8.12",
    "bunyan-format": "^0.2.1",
    "coveralls": "^3.0.0",
    "dotenv-safe": "^4.0.3",
    "jsonwebtoken": "^8.0.1",
    "knex": "^0.13.0",
    "moment": "2.18.1",
    "mysql": "^2.14.1",
    "passport": "^0.4.0",
    "passport-jwt": "^3.0.0",
    "pm2": "^2.6.1",
    "restify": "^4.3.1",
    "restify-links": "^1.1.0",
    "stripe": "^5.1.1"
  },
  "devDependencies": {
    "apidoc": "0.17.6",
    "ava": "0.22.0",
    "codacy-coverage": "^2.0.2",
    "docco": "^0.7.0",
    "eslint": "4.8.0",
    "eslint-config-standard": "^10.2.1",
    "eslint-plugin-ava": "^4.0.1",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-node": "^5.1.1",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-standard": "^3.0.1",
    "jsdoc": "3.5.5",
    "nodemon": "^1.11.0",
    "nyc": "11.2.1",
    "sinon": "^4.0.1"
  },
  "apidoc": {
    "url": "https://stockpile.adamvig.com/api",
    "title": "Stockpile API Docs",
    "order": [
      "Main"
    ],
    "template": {
      "withGenerator": false
    },
    "header": {
      "title": "General",
      "filename": "./docs/apidoc-header.md"
    }
  },
  "greenkeeper": {
    "ignore": [
      "restify"
    ]
  }
}
