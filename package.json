{
  "name": "stockpile-api",
  "version": "0.0.1",
  "description": "The API for Stockpile, an app that manages stuff for organizations.",
  "main": "index.js",
  "repository": "https://github.com/AdamVig/stockpile-api.git",
  "author": "Adam Vigneaux <adamvigneaux@gmail.com>",
  "license": "UNLICENSED",
  "scripts": {
    "start": "pm2 start index.js --name stockpile",
    "stop": "pm2 stop stockpile || true",
    "dev": "nodemon index.js",
    "test": "nyc ava",
    "lint": "eslint .",
    "docs": "yarn run apidoc && yarn run jsdoc",
    "apidoc": "apidoc --input controllers/ --output docs/apidoc",
    "jsdoc": "jsdoc --configure .jsdoc.json"
  },
  "dependencies": {
    "apidoc": "^0.17.5",
    "bcrypt": "^1.0.2",
    "bunyan": "^1.8.5",
    "bunyan-format": "^0.2.1",
    "coveralls": "^2.11.15",
    "dotenv-safe": "^4.0.3",
    "jsonwebtoken": "^7.4.0",
    "knex": "^0.12.6",
    "mysql": "^2.13.0",
    "passport": "^0.3.2",
    "passport-jwt": "^2.2.1",
    "pm2": "2.4.2",
    "restify": "^4.3.0",
    "restify-json-hal": "^0.1.2",
    "restify-links": "^1.1.0"
  },
  "devDependencies": {
    "ava": "^0.17.0",
    "chai": "^3.5.0",
    "docco": "^0.7.0",
    "eslint": "^3.14.1",
    "eslint-plugin-ava": "^4.0.1",
    "eslint-plugin-standard": "^2.0.1",
    "jsdoc": "^3.4.3",
    "nodemon": "^1.11.0",
    "nyc": "^10.1.2",
    "sinon": "1.17.7"
  },
  "apidoc": {
    "url": "https://stockpile.adamvig.com/api",
    "title": "Stockpile API Docs",
    "order": [
      "Main"
    ],
    "template": {
      "withCompare": false,
      "withGenerator": false
    },
    "header": {
      "title": "General",
      "filename": "./docs/apidoc-header.md"
    }
  }
}
