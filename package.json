{
  "name": "stockpile-api",
  "version": "1.0.0",
  "description": "The API for Stockpile, an app that manages stuff for organizations.",
  "main": "index.js",
  "repository": "https://github.com/AdamVig/stockpile-api.git",
  "author": "Adam Vigneaux <adamvigneaux@gmail.com>",
  "license": "UNLICENSED",
  "scripts": {
    "start": "pm2 start index.js --name stockpile",
    "stop": "pm2 stop stockpile || true",
    "dev": "nodemon --inspect index.js",
    "test": "nyc ava",
    "lint": "eslint . --ignore-path .gitignore",
    "docs": "npm run apidoc && npm run jsdoc",
    "apidoc": "apidoc --input controllers/ --input services/ --output docs/apidoc",
    "jsdoc": "jsdoc --configure .jsdoc.json"
  },
  "dependencies": {
    "apidoc": "^0.17.5",
    "bcrypt": "^1.0.2",
    "bunyan": "^1.8.12",
    "bunyan-format": "^0.2.1",
    "coveralls": "^2.11.15",
    "dotenv-safe": "^4.0.3",
    "jsonwebtoken": "^7.4.2",
    "knex": "^0.12.6",
    "moment": "2.18.1",
    "mysql": "^2.14.1",
    "passport": "^0.3.2",
    "passport-jwt": "^2.2.1",
    "pm2": "^2.6.1",
    "restify": "^4.3.1",
    "restify-links": "^1.1.0",
    "stripe": "^4.24.0"
  },
  "devDependencies": {
    "ava": "^0.17.0",
    "chai": "^3.5.0",
    "codacy-coverage": "^2.0.2",
    "docco": "^0.7.0",
    "eslint": "^3.14.1",
    "eslint-config-standard": "^10.2.1",
    "eslint-plugin-ava": "^4.0.1",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-node": "^5.1.1",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-standard": "^3.0.1",
    "jsdoc": "^3.5.4",
    "nodemon": "^1.11.0",
    "nyc": "^10.1.2",
    "sinon": "^1.17.7"
  },
  "apidoc": {
    "url": "https://stockpile.adamvig.com/api",
    "title": "Stockpile API Docs",
    "order": [
      "Main"
    ],
    "template": {
      "withGenerator": false
    },
    "header": {
      "title": "General",
      "filename": "./docs/apidoc-header.md"
    }
  }
}
